<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vaibhav.newsup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/newsup_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logoo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.register" />
        <activity android:name=".screens.login">
        </activity>
        <activity android:name=".screens.NewsInfo" />
        <activity android:name=".Categories" />
        <activity android:name=".MainActivity"></activity>

        <receiver android:name=".NotifierClass" />
    </application>

</manifest>